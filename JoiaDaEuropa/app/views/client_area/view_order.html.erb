<style>
  .nav-tabs li a {
    color: #777;
  }
</style>
<div class="col-md-10">
<h3 class="text-center"><%= t('orders')%></h3>
<ul class="nav nav-tabs">
  <li class="active"><a data-toggle="tab" href="#menu1">All</a></li>
  <li><a data-toggle="tab" href="#menu2"><%=t('pending')%></a></li>
  <li><a data-toggle="tab" href="#menu3"><%=t('concluded')%></a></li>
  <li><a data-toggle="tab" href="#menu4"><%=t('cancelled')%></a></li>
</ul>

<div class="tab-content">
  <div id="menu1" class="tab-pane fade in active">
    <table style="width:100%">
      <tr>

        <th>ID</th>
        <th><%= t('order_name') %> </th>
        <th><%= t('price') %></th>
        <th><%= t('delivery_date') %></th>
        <th><%= t('state') %></th>

      </tr>

      <% @order.each do |order| %>

          <tr>

            <td><%= link_to sprintf('#%s', order.id), show_order_path(order.id) %></td>
            <td><%= h order.name %></td>
            <td><%= h order.price %>€</td>
            <td><%= h order.delivery_date %></td>
            <td><%= h order.state.description %></td>

          </tr>
      <% end %>

    </table>
  </div>
  <div id="menu2" class="tab-pane fade">
    <table style="width:100%">

      <tr>

        <th>ID</th>
        <th>Order Name</th>
        <th>Price</th>
        <th>Delivery Date</th>
        <th></th>

      </tr>
      <% @pending_orders.each do |order| %>
          <tr>

            <td><%= link_to sprintf('#%s', order.id), show_order_path(order.id) %></td>
            <td><%= h order.name %></td>
            <td><%= h order.price %>€</td>
            <td><%= h order.delivery_date %></td>
            <td><%= link_to 'Edit', edit_order_path(order.id), class: 'btn btn-default' %></td>
            <td><%= link_to 'Delete', destroy_order_path(order.id), class: 'btn btn-default', method: :delete, data: {confirm: 'Are you sure?'} %></td>

      <% end %>
      </tr>

    </table>
  </div>
  <div id="menu3" class="tab-pane fade">
    <table style="width:100%">

    <tr>

      <th>ID</th>
      <th>Order Name</th>
      <th>Price</th>
      <th>Delivery Date</th>
      <th></th>

    </tr>
    <% @concluded_orders.each do |order| %>
        <tr>

          <td><%= link_to sprintf('#%s', order.id), show_order_path(order.id) %></td>
          <td><%= h order.name %></td>
          <td><%= h order.price %>€</td>
          <td><%= h order.delivery_date %></td>

    <% end %>
    </tr>

    </table>

  </div>
  <div id="menu4" class="tab-pane fade">
    <table style="width:100%">

      <tr>

        <th>ID</th>
        <th>Order Name</th>
        <th>Price</th>
        <th>Delivery Date</th>
        <th></th>

      </tr>

      <% @cancelled_orders.each do |order| %>
          <tr>

            <td><%= link_to sprintf('#%s', order.id), show_order_path(order.id) %></td>
            <td><%= h order.name %></td>
            <td><%= h order.price %>€</td>
            <td><%= h order.delivery_date %></td>

      <% end %>
      </tr>

    </table>
  </div>
</div>
</div>