<!DOCTYPE html>
<html>
<head>
  <title>JoiaDaEuropa</title>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<header class="header">
  <div id="header">
    <!--<img src="<%= asset_path 'joiaeuropa.png' %>">-->

    <div class="pull-right">
      <% if current_user %>
          <div>Menu do Utilizador</div>
          <%= link_to 'Sign Out', destroy_user_session_path, {method: 'delete'} %>
      <% else %>
          <%= link_to 'Sign In', new_user_session_path %>
      <% end %>
    </div>


    <div class="pull-left">
      <%= link_to 'PT', '/?lang=pt' %>
      <span>|</span>
      <%= link_to 'EN', '/?lang=en' %>
    </div>

  </div>
</header>

<!-- menu -->
<nav class="navbar navbar-default ">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">

        <li><a href="/home/index"><b>Página Inicial</b></a></li>
        <li><a href="/home/about_us"><b>História</b></a></li>
        <li><a href="/home/mission"><b>Missão</b></a></li>
        <li><a href="/home/news"><b>Notícias</b></a></li>
        <li><a href="/home/contacts"><b>Contactos</b></a></li>

      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <div class="row">
    <div class="<%= current_user.nil? ? 'hidden' : 'col-md-2' %>">
      <h1>My Menu</h1>
      <ul>

        <li><%= link_to t('my_account'), profile_profile_path %></li>

        <li><%= link_to t('new_order'), client_area_create_new_order_path %></li>

        <li><%= link_to t('View_order'), client_area_view_order_path %></li>

      </ul>
    </div>
    <div class="<%= current_user.nil? ? 'col-md-12' : 'col-md-8' %>">
      <%= yield %>
    </div>

  </div>
</div>

<% if notice %>
    <div class="alert alert-info" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
      <%= notice %>
    </div>
<% end %>
<% if alert %>
    <div class="alert alert-warning" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
      <%= alert %>
    </div>
<% end %>

  <div id="space">

  </div>
</body>

<footer >

  <div id="footer">
    <div class="col-md-4">
      <h5 class="text-left">&copy; Created by: PDS_G3</h5>
    </div>

    <div class="col-md-4">
      <h5 class="text-center">Jóia da Europa Unipessoal, Lda.</h5>
    </div>

    <div class="col-md-4">
      <h5 class="text-right">Contact information: <a href="mailto:joiadaeuropa@joiadaeuropa.com">
        Joia da Europa Email</a></h5>
    </div>
  </div>

</footer>
</html>